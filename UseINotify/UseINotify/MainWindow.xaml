<Window x:Class="UseINotify.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UseINotify"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Canvas>
            <TextBlock Text="Firstname" Canvas.Left="363" Canvas.Top="59"/>
            <TextBlock Text="Lastname" Canvas.Left="365" Canvas.Top="160"/>
            <TextBlock Text="Fullname" Canvas.Left="367" Canvas.Top="274"/>
            <TextBox Text="{Binding Path=FullName}" Height="81" Width="181" Canvas.Left="550" Canvas.Top="252" />
            <TextBox Text="{Binding Path=LastName}" Height="71" Width="181" Canvas.Left="550" Canvas.Top="141" />
            <TextBox Text="{Binding Path=FirstName}" Height="73" Width="181" Canvas.Left="550" Canvas.Top="32" />
        </Canvas>

    </Grid>
</Window>
